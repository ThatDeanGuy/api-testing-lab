    {
      "name": "Get user by ID",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Check if a field exists\r",
              "pm.test(\"Response has 'id' property\", () => {\r",
              "  const jsonData = pm.response.json();\r",
              "  pm.expect(jsonData).to.have.property(\"id\");\r",
              "});\r",
              "\r",
              "// Check if a field is a certain type and not empty\r",
              "pm.test(\"Name is not empty\", () => {\r",
              "  const jsonData = pm.response.json();\r",
              "  pm.expect(jsonData.name).to.be.a(\"string\").and.not.empty;\r",
              "});\r",
              "\r",
              "// Check if a value matches expected\r",
              "pm.test(\"Role is admin\", () => {\r",
              "  const jsonData = pm.response.json();\r",
              "  pm.expect(jsonData.role).to.eql(\"admin\");\r",
              "});\r",
              "\r",
              "// Check multiple fields at once\r",
              "pm.test(\"All required fields exist\", () => {\r",
              "  const jsonData = pm.response.json();\r",
              "  pm.expect(jsonData).to.have.property(\"id\");\r",
              "  pm.expect(jsonData).to.have.property(\"name\");\r",
              "  pm.expect(jsonData).to.have.property(\"role\");\r",
              "});\r",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
